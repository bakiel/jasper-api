# JASPER API - Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================
# DATABASE (Required)
# ============================================
# Create a free database at https://neon.tech
# Copy the connection string (starts with postgres:// or postgresql://)
DATABASE_URL=postgresql://user:password@ep-xxx.region.neon.tech/neondb?sslmode=require

# ============================================
# SECURITY (Required)
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters

# ============================================
# EMAIL (Required for verification)
# ============================================
# SMTP settings for sending verification/password reset emails
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Admin notification email
ADMIN_EMAIL=admin@jasperfinance.org

# ============================================
# OAUTH (Optional - for social login)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================
# URLS (Optional)
# ============================================
# Frontend URLs for email links
CLIENT_PORTAL_URL=https://client.jasperfinance.org
ADMIN_PORTAL_URL=https://portal.jasperfinance.org

# ============================================
# DEBUG (Optional)
# ============================================
DEBUG=false
